@model LoginViewModel
@{
    ViewData["Title"] = "Signup";
}
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Create Your Account</h2>

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <form method="post" asp-controller="Logins" asp-action="Create">
                    <input type="hidden" asp-for="ReturnUrl" />

                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" id="email" asp-for="Email" class="form-control" placeholder="Enter your email" required />
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" id="password" asp-for="Password" class="form-control" placeholder="Create a password" required />
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary btn-danger w-100">Sign Up</button>
                    </div>

                </form>

                <hr />

                <p class="text-center mt-3">
                    Already have an account? 
                    <a asp-action="Index" class="fw-bold">Login</a>
                </p>
            </div>
        </div>
    </div>
</div>